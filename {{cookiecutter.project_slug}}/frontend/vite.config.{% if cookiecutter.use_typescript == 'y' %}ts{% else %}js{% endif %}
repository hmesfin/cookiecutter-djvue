    Icons({
      compiler: 'vue3',
      autoInstall: true
    })
  ],
  resolve: {
    alias: {
      '@': fileURLToPath(new URL('./src', import.meta.url))
    }
  },
  server: {
    port: {{ cookiecutter.frontend_port }},
    proxy: {
      '/api': {
        target: 'http://localhost:{{ cookiecutter.backend_port }}',
        changeOrigin: true,
        secure: false,
      },
      '/admin': {
        target: 'http://localhost:{{ cookiecutter.backend_port }}',
        changeOrigin: true,
