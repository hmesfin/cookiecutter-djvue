      },
      '/static': {
        target: 'http://localhost:{{ cookiecutter.backend_port }}',
        changeOrigin: true,
        secure: false,
      },
      '/media': {
        target: 'http://localhost:{{ cookiecutter.backend_port }}',
        changeOrigin: true,
        secure: false,
      }
    }
  },
  build: {
    outDir: 'dist',
    sourcemap: true,
    rollupOptions: {
      output: {
        manualChunks: {
          'vendor': ['vue', 'vue-router', 'pinia', 'axios'],
        }
      }
    }
  }
})