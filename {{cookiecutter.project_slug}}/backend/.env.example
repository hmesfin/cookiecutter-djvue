# Django Settings
SECRET_KEY=your-secret-key-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
{% if cookiecutter.database == 'postgresql' -%}
# PostgreSQL
DATABASE_URL=postgres://user:password@localhost:5432/{{ cookiecutter.project_slug }}
# For development without PostgreSQL, use SQLite:
# DATABASE_URL=sqlite:///db.sqlite3
{% elif cookiecutter.database == 'mysql' -%}
# MySQL
DATABASE_URL=mysql://user:password@localhost:3306/{{ cookiecutter.project_slug }}
# For development without MySQL, use SQLite:
# DATABASE_URL=sqlite:///db.sqlite3
{% else -%}
# SQLite (default for development)
DATABASE_URL=sqlite:///db.sqlite3
{%- endif %}

{% if cookiecutter.use_redis == 'y' -%}
# Redis
REDIS_URL=redis://localhost:6379/0
{%- endif %}

{% if cookiecutter.use_celery == 'y' -%}
# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
USE_CELERY=False  # Set to True when Redis is available
{%- endif %}

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@{{ cookiecutter.domain_name }}
SEND_WELCOME_EMAIL=True

# Security
CORS_ALLOWED_ORIGINS=http://localhost:{{ cookiecutter.frontend_port }}

# Frontend
FRONTEND_URL=http://localhost:{{ cookiecutter.frontend_port }}

# API Settings
API_THROTTLE_RATE=100/hour

{% if cookiecutter.use_sentry == 'y' -%}
# Sentry
SENTRY_DSN=
{%- endif %}

{% if cookiecutter.cloud_provider == 'aws' -%}
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
{%- endif %}