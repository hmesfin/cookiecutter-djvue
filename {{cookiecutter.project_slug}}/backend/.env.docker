# Docker Environment Variables
# These are set automatically by docker-compose.yml
# DO NOT commit this file to version control

# Django Settings
SECRET_KEY=django-insecure-development-key-change-in-production
DEBUG=True
DJANGO_ENV=development

# Database (automatically configured by Docker)
{% if cookiecutter.database == 'postgresql' -%}
DATABASE_URL=postgres://{{ cookiecutter.project_slug }}:changeme@postgres:5432/{{ cookiecutter.project_slug }}
{% elif cookiecutter.database == 'mysql' -%}
DATABASE_URL=mysql://{{ cookiecutter.project_slug }}:changeme@mysql:3306/{{ cookiecutter.project_slug }}
{% else -%}
DATABASE_URL=sqlite:///db.sqlite3
{%- endif %}

{% if cookiecutter.use_redis == 'y' -%}
# Redis (automatically configured by Docker)
REDIS_URL=redis://redis:6379/0
{%- endif %}

{% if cookiecutter.use_celery == 'y' -%}
# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
{%- endif %}

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:{{ cookiecutter.frontend_port }}

# Email (MailHog in development)
{% if cookiecutter.use_mailhog == 'y' -%}
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
{% else -%}
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
{%- endif %}

# Frontend URL
FRONTEND_URL=http://localhost:{{ cookiecutter.frontend_port }}