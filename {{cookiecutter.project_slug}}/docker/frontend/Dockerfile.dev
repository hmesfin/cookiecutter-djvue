{% if cookiecutter.use_docker == 'y' -%}
# Development Dockerfile for frontend
FROM node:{{ cookiecutter.node_version }}-alpine

WORKDIR /app

# Install dependencies for better development experience
RUN apk add --no-cache git

# Copy package files
COPY frontend/package.json ./

# Install dependencies (using npm install for development)
RUN npm install && npm cache clean --force

# The source code will be mounted as a volume, so we don't copy it here

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server with host binding for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
{%- endif %}